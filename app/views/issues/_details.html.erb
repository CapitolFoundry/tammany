<div class="row">
  <div class="issue">
  		<h3><%= @issue.name %>  |  <small><%= @issue.priority_level.name %></small></h3>
		
  		<p>Date Created:<%= @issue.created_at.to_date %> Status: <%= @issue.status.name %></p>
    
      <p>Description: <%= @issue.description %></p>
      
      <p>Caseworker: <%= @issue.caseworker.name %></p>
  </div>

  <%= render @issue.constituent %>

  <%= render @issue.issue_updates %>

  <%= link_to("Update", edit_issue_path(@issue), :class => 'button') %>
</div>


